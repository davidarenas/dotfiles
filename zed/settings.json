// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "telemetry": {
    "metrics": false
  },
  "format_on_save": "off",
  "cursor_blink": false,
  // use relative line numbers
  "relative_line_numbers": true,
  // hide the scroll bar
  "scrollbar": {
    "show": "never"
  },
  "languages": {
    "JavaScript": {
      "prettier": {
        "allowed": true
      },
      "formatter": {
        "external": {
          "command": "eslint --fix",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "experimental.theme_overrides": {
    "title_bar.background": "#16161D",
    "status_bar.background": "#16161D",
    "tab_bar.background": "#16161D",
    "tab.inactive_background": "#1F1F28",
    "tab.active_background": "#2A2A37",
    "toolbar.background": "#2A2A37",
    "editor.background": "#1F1F28",
    "editor.gutter.background": "#2A2A37",
    "editor.active_line.background": "#363646",
    "editor.foreground": "#DCD7BA",
    "editor.line_number": "#54546D",
    "editor.active_line_number": "#DCD7BA",
    "predictive": "#727169",
    "panel.background": "#1F1F28",
    "elevated_surface.background": "#2A2A37",
    "search.match_background": "#363646",

    "border": "#363646",
    "border.variant": "#363646"
  },

  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "vim_mode": true,
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_size": 14,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 14,
  "buffer_font_weight": 500,
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Kanagawa-Dragon"
  }
}
